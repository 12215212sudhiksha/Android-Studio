<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/img_37">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/atomic_age"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Projects"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bachelorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:layout_marginTop="0dp"
        android:paddingBottom="0dp"
        android:text="Music Recommendation System(Sep 2023 – Nov 2023)"

        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/akaya_kanadaka"

        android:text="Skills used - Python"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/akaya_kanadaka"

        android:text="Learning Outcomes- Data Handling and Processing, programming and libraries and project management"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:layout_marginTop="0dp"
        android:paddingBottom="0dp"
        android:text="Fitness Club Website(Sep 2023 – Nov 2023)"

        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/akaya_kanadaka"

        android:text="Skills used - HTML, CSS and JavaScript"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/akaya_kanadaka"

        android:text="Learning Outcomes- Learned how to create a backend and Frontend for the website"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="normal" />





</LinearLayout>
