<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/img_37">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/atomic_age"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Education"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bachelorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:paddingBottom="0dp"
        android:text="B.Tech Computer Science and Engineering"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/universityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"

        android:text="Lovely Professional University, Punjab"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:textStyle="normal" />

    <TextView
        android:id="@+id/higherSecondaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:paddingBottom="0dp"
        android:text="Higher Secondary, CBSE"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kendriyaVidyalayaTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:paddingBottom="0dp"
        android:text="Kendriya Vidyalaya No.2 AFS Pune-32, Pune, Maharashtra"
        android:textStyle="normal"

        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/seniorSecondaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:paddingBottom="0dp"
        android:text="Senior Secondary, CBSE"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kendriyaVidyalayaTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:text="Kendriya Vidyalaya No.2 AFS Pune-32, Pune, Maharashtra"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="20dp" />

</LinearLayout>

